{
  "extends": "tslint-config-airbnb",
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": false,
    "jsx": "react",
    "baseUrl": "./lib",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "./lib"
  ],
  "typeRoots": [ "./lib/types", "./node_modules/@types"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
